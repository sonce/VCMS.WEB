{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"module": "ESNext",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"target": "ES2015",
		"typeRoots": ["node_modules/@types","./custom_types"],
		"lib": ["es2018", "dom","ES2020.Promise"],
		"paths": {
			"shared": ["dist/shared"],
			"shared/*": ["dist/shared/*"],
			"@app/*": ["src/app/*"],
			"@assets": ["src/assets/*"],
			"@core": ["src/app/@core"],
			"@core/*": ["src/app/@core/*"],
			"@shared": ["src/app/@shared"],
			"@shared/*": ["src/app/@shared/*"],
			"@env/*": ["src/environments/*"],
			"rxjs": ["./node_modules/rxjs"]
		}
  },
	"exclude": ["dist"]
}
